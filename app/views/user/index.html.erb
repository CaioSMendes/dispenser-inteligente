<!DOCTYPE html>
<html>
<head>
  <title>Dispensador de Bebidas</title>
  <style>
    #dispenser {
      width: 200px;
      height: 300px;
      background-color: #ccc;
      position: relative;
    }

    #liquid {
      width: 100%;
      height: 100%;
      background-color: blue;
      position: absolute;
      bottom: 0;
    }

    button {
      margin-top: 10px;
    }
  </style>
</head>
<body>
  <div id="dispenser">
    <div id="liquid"></div>
    <button id="dispenseBtn">Dispensar</button>
  </div>

  <script>
    // Inicialização do líquido
    let liquidLevel = 100; // Valor inicial em porcentagem (100%)
    const liquidElement = document.getElementById('liquid');
    updateLiquid();

    // Botão de dispensar
    const dispenseBtn = document.getElementById('dispenseBtn');
    dispenseBtn.addEventListener('click', () => {
      if (liquidLevel > 0) {
        liquidLevel -= 10; // Reduz 10% a cada interação
        updateLiquid();
      }
    });

    // Função para atualizar o nível do líquido visualmente
    function updateLiquid() {
      liquidElement.style.height = liquidLevel + '%';
    }
  </script>
</body>
</html>

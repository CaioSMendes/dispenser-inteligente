<div class="container-fluid">
  <div class="row">
    <!-- Sidebar -->
    <div class="col-lg-3">
          <div class="sidebar bg-dark">
              <ul class="list-group">
              <li class="list-group-item active">Dashboard</li>
              <li class="list-group-item"><%= link_to 'Home', admin_index_path %></li>
              <li class="list-group-item"><%= link_to 'Gestão de Usuários', administrador_users_path %></li>
              <li class="list-group-item"><%= link_to 'Gestão de Vendedores', sellers_path %></li>
              <li class="list-group-item"><%= link_to 'Vizualização de Dispositivos', status_path %></li>
              <li class="list-group-item"><%= link_to 'Gestão de Dispositivos', devices_path %></li>
              <li class="list-group-item"><%= link_to 'Gestão da API', sms_messages_path %></li>
              <li class="list-group-item"><%= link_to 'Configuração de Mensagens', sms_messages_path %></li>
              <li class="list-group-item"><%= link_to 'Configuração de Preço', dose_prices_path %></li>
              </ul>
          </div>
    </div>
    <!-- /Sidebar -->
      <div class="col-lg-9">
        <h1 class="mt-4">Gerenciamento de Vendedores</h1>
        <%if current_user.admin? %>
        <%else%>
          <%= link_to "Novo vendedor", new_seller_path, class: "btn btn-success" %>
        <%end%>
        <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-8">

            <table class="table">
              <thead>
                <tr>
                  <th>Status</th>
                  <th>Nome</th>
                  <th>Cartão RFID</th>
                  <th>Cargo</th>
                  <th>Doses</th>
                  <th>Email</th>
                  <th>Atrelar Vendedores</th>
                  <th>Ver</th>
                  <th>Editar</th>
                  <th>Excluir</th>
                </tr>
              </thead>
              <tbody>
                <% @sellers.each do |seller| %>
                  <tr>
                    <td><%= seller.status %></td> 
                    <td><%= seller.nome %></td>
                    <td><%= seller.cardRFID %></td>
                    <td><button type="button" class="btn btn-info"><%= seller.cargo %></button></td>
                    <td><%= seller.contador %></td>
                    <td><%= seller.email %></td>
                    <td><%= link_to "Atrelar Devices", seller_attach_devices_path(seller) %></td>
                    <td> 
                        <%= button_to seller_path(seller), method: :get, class: 'btn btn-primary' do %>
                        <i class="fa f fa-search"></i>
                        <% end %>
                    </td>

                    <td> 
                        <%= button_to edit_seller_path(seller), method: :get, class: 'btn btn-warning' do %>
                        <i class="fa fa-edit"></i>
                        <% end %>
                    </td>
                  
                    <td> 
                        <%= button_to seller_path(seller), method: :delete, data: { confirm: 'Tem certeza que deseja excluir este usuário?' }, class: 'btn btn-danger' do %>
                        <i class="fa fa-trash"></i>
                        <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>


          </div>
        </div>
      </div>
    </div>      
  </div>
</div>
